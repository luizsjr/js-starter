<!DOCTYPE html>
<html>

<head>
  <% include partials/head.ejs %>
</head>

<body>
  <div class="container">
    <!--Navigation Bar -->
    <% include partials/navbar.ejs %>

    <!-- Header -->
    <% include partials/header.ejs %>

    <!-- Books -->
    <%for (let book of books) {%>
    <div class="row py-3">
      <div class="text-center col-md-2 col-sm-3">
        <img alt="" src="<%=book.coverImage%>" class="rounded-circle thumbnail">
      </div>
      <div class="col-md-10 col-sm-9">
        <h4><%=book.title%></h4>
        <h5><span class="badge badge-secondary"><%=book.author%></span></h5>
        <h6><small class="text-muted story-time"><a href="/books/<%=book._id%>" class="text-muted">Read More</a></small></h6>
      </div>
    </div>
    <hr>
    <%}%>

    <!--<a href="#" class="btn btn-primary float-right">More <i class="fas fa-chevron-right"></i></a>-->

  </div>

  <!-- Footer -->
  <% include partials/footer.ejs %>

</body>
</html>
