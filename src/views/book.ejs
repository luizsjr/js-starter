<!DOCTYPE html>
<html>

<head>
  <% include partials/head.ejs %>
</head>

<body>
  <div class="container">
    <!--Navigation Bar -->
    <% include partials/navbar.ejs %>

    <!-- Header -->
    <% include partials/header.ejs %>

    <!-- Book -->
    <div class="row py-3">
      <div class="text-center col-md-2 col-sm-3">
        <img alt="" src="http://api.randomuser.me/portraits/thumb/men/<%=Number(book.id)+10%>.jpg" class="rounded-circle thumbnail">
      </div>
      <div class="col-md-10 col-sm-9">
        <h4><%=book.title%></h4>
        <h5><span class="badge badge-secondary"><%=book.author%></span></h5>
        <h6><small class="text-muted story-time"><%=book.genre%></small></h6>
      </div>
    </div>
    <hr>

    <a href="/books" class="btn btn-primary float-left"><i class="fas fa-chevron-left"></i> Back</a>

  </div>

  <!-- Footer -->
  <% include partials/footer.ejs %>

</body>
</html>
